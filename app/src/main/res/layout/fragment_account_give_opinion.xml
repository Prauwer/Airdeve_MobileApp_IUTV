<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:gravity="center"
        style="@style/ou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Évaluez votre expérience"
        android:textColor="@color/black"
        android:textSize="@dimen/texte"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:layout_constraintHorizontal_bias="0.5"/>


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numStars="5"
        android:stepSize=".5"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        style="@style/ou"
        android:layout_width="414dp"
        android:layout_height="65dp"

        android:layout_marginBottom="548dp"
        android:gravity="center"

        android:text="@string/racontez_nous_en_plus"
        android:textColor="@color/black"
        android:textSize="@dimen/texte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.5"/>

    <EditText
        android:layout_marginStart="10dp"
        android:gravity="bottom"
        android:id="@+id/pseudo_conexion"
        android:layout_width="388dp"
        android:layout_height="195dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="348dp"
        android:hint="@string/l_evenement_etait"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintVertical_bias="0.28"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"


       />

    <TextView
        android:gravity="center"
        android:id="@+id/textView8"
        style="@style/ou"
        android:layout_width="422dp"

        android:layout_height="41dp"

        android:text="@string/avis_organisateur"
        android:textColor="@color/black"
        android:textSize="@dimen/texte"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pseudo_conexion"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.5"/>

    <EditText
        android:layout_marginStart="10dp"

        android:layout_width="388dp"
        android:layout_height="65dp"
        android:gravity="bottom"
        android:layout_marginEnd="10dp"
        android:hint="@string/écrire_avis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.048"
        app:layout_constraintHorizontal_bias="0.5"/>

    <Button
        android:id="@+id/satisfait2"
        style="@style/bouton_suivre"
        android:layout_width="148dp"
        android:layout_height="42dp"
        android:background="@drawable/custombutton"
        android:text="Soumettre"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.724" />

    <Button
        android:id="@+id/evenement"
        style="@style/bouton_suivre"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/custombutton_2"
        android:text="@string/evenement"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.823" />

    <Button
        android:id="@+id/aceuille"
        style="@style/bouton_suivre"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/custombutton_2"
        android:text="@string/aceuille"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.973"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.823" />


</androidx.constraintlayout.widget.ConstraintLayout>

