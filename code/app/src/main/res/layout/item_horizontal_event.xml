<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/default_margin_recycler"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="@dimen/default_margin_recycler"
    android:layout_marginBottom="25dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/recycler_event_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/vert" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/recycler_event_name"
        style="@style/DefaultTextStyle"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom|center"
        android:text="EVENT_NAME"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:textStyle="bold" />

</androidx.cardview.widget.CardView>